{
  "name": "Youtube Music",
  "description": "Web Youtube Music",
  "version": "0.1",
  "minimum_chrome_version": "30",
  "author": [
    {
      "name": "Gustavo Guarda",
      "email": "gustavoguarda@gmail.com"
    }
  ],
  "app": {
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  },
  "icons": { "16": "yt-music-16.png", "128": "yt-music-128.png" },
  "permissions": [
    "webview",
    "audioCapture",
    "videoCapture",
    "storage",
    "fullscreen"
  ],
  "webview": {
    "partitions": [
      {
        "name": "yt-music",
        "accessible_resources": [""]
      }
    ]
  }
}